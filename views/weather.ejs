<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Weather Forecast</title>
    <style>
    html {
        --s: 150px; 
        background:
            conic-gradient(from calc(-45deg + var(--g11-a)) at calc(50% + var(--g11-x)) calc(100% - var(--g11-y)), #0000 90deg, var(--c2) 0),
            conic-gradient(from calc(135deg + var(--g11-a)) at calc(50% - var(--g11-x)) calc(0% + var(--g11-y)), var(--c1) 90deg, var(--c2) 0);
        background-size: var(--s) var(--s);
        animation:
            g11-1 1.5s infinite cubic-bezier(.3, 0, .7, 1) alternate,
            g11-2 3s infinite linear;
    }
    @keyframes g11-2 {
        0%, 49.99% {
            --c1: #424a72;
            --c2: #0f111a;
            background-position: 0 0;
        }
        50%, 100% {
            --c2: #424a72;
            --c1: #0f111a;
            background-position: calc(var(--s) / 2) calc(var(--s) / 2);
        }
    }
    @keyframes g11-1 {
        0% {
            --g11-a: 0deg;
            --g11-x: 0%;
            --g11-y: 0%;
        }
        50% {
            --g11-a: -45deg;
            --g11-x: 35.35%;
            --g11-y: 14.65%;
        }
        100% {
            --g11-a: -90deg;
            --g11-x: 50%;
            --g11-y: 50%;
        }
    }

    body {
        font-family: Arial, sans-serif;
        text-align: center;
        margin: 0;
        padding: 0;
    }

    h1 {
        margin: 20px auto;
        width: fit-content;
        padding: 20px;
        color: #fff;
        background-color: rgba(30, 144, 255, 0.8); 
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
        border-radius: 10px;
        text-align: center;
    }

    table {
        width: 80%;
        margin: 20px auto;
        border-collapse: collapse;
        background-color: rgba(255, 255, 255, 0.8);
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }
    table, th, td {
        border: 1px solid #ccc;
        padding: 10px;
    }
    th {
        background-color: #f0f0f0;
    }
    .gif-container {
        display: flex;
        justify-content: center;
        align-items: center;
        flex-wrap: wrap;
        margin-top: 20px;
    }
    .gif-container img {
        width: 200px;
        margin: 10px;
        box-shadow: 0 0 5px rgba(0, 0, 0, 0.2);
        border-radius: 5px;
    }
    </style>
    <!-- <link rel="stylesheet" href="/styles.css"> -->
</head>
<body>
    <h1>Weather Forecast</h1>

    <table>
        <thead>
            <tr>
                <th>Date</th>
                <th>Weather</th>
                <th>Temperature</th>
            </tr>
        </thead>
        <tbody>
            <% weatherForecast.forEach(day => { %>
                <tr>
                    <td><%= day.date %></td>
                    <td><%= day.weatherType %></td>
                    <td><%= day.temperature %></td>
                </tr>
            <% }) %>
        </tbody>
    </table>

    <div class="gif-container">
        <% gifs.forEach(gif => { %>
            <img src="<%= gif.images.original.url %>" alt="<%= gif.title %>">
        <% }) %>
    </div>
</body>
</html>
